<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <td>姓名</td>
      <td>信箱</td>
      <td>性別</td>
      <td>年齡</td>
      <td>動作</td>
    </tr>
  </thead>
  <tbody>
    <!-- 顯示使用者在資料庫裡的資料 -->
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.mail %></td>
      <td><%= user.gender %></td>
      <td><%= user.age %></td>

      <!-- 加上 檢視，編輯，刪除 三個連結 -->
      <td>
        <%= link_to "檢視", user_path(user.id) %>
        <%= link_to "編輯", edit_user_path(user.id) %>
        <%= link_to "刪除", user_path(user.id), method: "delete",
            data: {confirm: "Delete User #{user.name}, Are you sure?"} %>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新增使用者", new_user_path %> <br />
<%= notice %>
