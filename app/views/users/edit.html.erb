<h1>編輯使用者資料</h1>
<div class="form container">
  <%= form_for(@user) do |f| %>
    <div class="form-group">
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :mail, "信箱" %>
      <%= f.text_field :mail, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :gender, "性別" %>
      <%= f.text_field :gender, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :age, "年齡" %>
      <%= f.text_field(:age, class: "form-control") %>
    </div>

    <%= f.submit() %><br />
  <% end %>
</div>
